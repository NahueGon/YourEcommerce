<!DOCTYPE html>
<html lang="en" class="dark">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <script type="importmap"></script>
    <link href="~/css/output.css" rel="stylesheet" />
    <link
        rel="stylesheet"
        href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css"
    />
    <script>
        if (localStorage.getItem('color-theme') === 'dark' || (!('color-theme' in localStorage) && window.matchMedia('(prefers-color-scheme: dark)').matches)) {
            document.documentElement.classList.add('dark');
        } else {
            document.documentElement.classList.remove('dark')
        }
    </script>
</head>

<body class="bg-white dark:bg-black text-black dark:text-white">

    <div class="absolute flex gap-2 top-4 right-4">
        @await Html.PartialAsync("_ThemeButton")
        @await Html.PartialAsync("_HomeButton")
    </div>

    <main role="main">
        @RenderBody()
    </main>

    <script src="https://unpkg.com/lucide@latest"></script>
    <script>
        lucide.createIcons();
    </script>
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.js"></script>
    <script src="~/js/flowbite.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/js/theme-toggle.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        @if (TempData["ToastSuccess"] != null)
        {
            <text>
                showToast('success', '@TempData["ToastSuccess"]');
            </text>
        }

        @if (TempData["ToastError"] != null)
        {
            <text>
                showToast('error', '@TempData["ToastError"]');
            </text>
        }
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
