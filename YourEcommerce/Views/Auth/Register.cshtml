@model YourEcommerce.ViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Registro";
}

<div class="flex p-4 items-center justify-center min-h-screen bg-neutral-100/10 dark:bg-gray-900">
    <div class="w-full max-w-md p-8 rounded-2xl shadow dark:bg-gray-800 animate__animated animate__fadeIn animate__faster">
        <h2 class="text-2xl font-bold text-gray-900 dark:text-white">Crear cuenta</h2>
        <form asp-action="Register" method="post" class="mt-6 space-y-4">
            <div>
                <label asp-for="Name" class="block mb-1 text-sm font-medium text-gray-700 dark:text-gray-300">Nombre</label>
                <input asp-for="Name" class="w-full px-3 py-2 border rounded-lg dark:bg-gray-700 dark:text-white dark:border-gray-600" />
                <span asp-validation-for="Name" class="text-red-600 text-sm"></span>
            </div>
            <div>
                <label asp-for="Email" class="block mb-1 text-sm font-medium text-gray-700 dark:text-gray-300">Correo electrónico</label>
                <input asp-for="Email" type="email" class="w-full px-3 py-2 border rounded-lg dark:bg-gray-700 dark:text-white dark:border-gray-600" />
                <span asp-validation-for="Email" class="text-red-600 text-sm"></span>
            </div>
            <div>
                <label asp-for="Password" class="block mb-1 text-sm font-medium text-gray-700 dark:text-gray-300">Contraseña</label>
                <input asp-for="Password" type="password" class="w-full px-3 py-2 border rounded-lg dark:bg-gray-700 dark:text-white dark:border-gray-600" />
                <span asp-validation-for="Password" class="text-red-600 text-sm"></span>
            </div>
            <div>
                <label asp-for="ConfirmPassword" class="block mb-1 text-sm font-medium text-gray-700 dark:text-gray-300">Confirmar contraseña</label>
                <input asp-for="ConfirmPassword" type="password" class="w-full px-3 py-2 border rounded-lg dark:bg-gray-700 dark:text-white dark:border-gray-600" />
                <span asp-validation-for="ConfirmPassword" class="text-red-600 text-sm"></span>
            </div>
            <button type="submit" class="cursor-pointer w-full px-4 py-2 font-semibold text-white bg-blue-600 rounded-lg hover:bg-blue-700">Registrarse</button>
        </form>
        <p class="mt-4 text-sm text-center text-gray-600 dark:text-gray-400">
            ¿Ya tienes una cuenta?
            <a asp-controller="Auth" asp-action="Login" class="text-blue-600 hover:underline">Inicia sesión</a>
        </p>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    @if (ViewBag.ShowSuccess != null && (bool)ViewBag.ShowSuccess)
    {
        <script>
            showToast("success", "Registro exitoso!");

            setTimeout(() => {
                window.location.href = "/auth/login";
            }, 1000);
        </script>
    }

    @if (ViewBag.ErrorToast != null)
    {
        <script>
            showToast("error", "@ViewBag.ErrorToast");
        </script>
    }
}