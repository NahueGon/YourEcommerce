@model YourEcommerce.DTOs.GenderDtos.GenderUpdateDto
@using YourEcommerce.DTOs.GenderDtos

@{
    ViewData["Title"] = "Editar Genero";
}

<div class="w-full p-4 md:p-8 overflow-auto">
    <form asp-action="UpdateGender" asp-controller="Gender" asp-route-id="@Model.Id" method="post" enctype="multipart/form-data" class="flex flex-col w-full max-w-70 gap-4 mx-auto sm:mx-0">
        <h3 class="sm:col-span-2 text-2xl font-semibold">@ViewData["Title"]</h3>
        <div class="sm:col-span-2 flex justify-center sm:justify-start">
            <div class="relative w-70 h-70 overflow-hidden rounded group cursor-pointer" onclick="triggerFileInput('GenderImageInput')" >
                <img src="@Model.GenderImageUrl" alt="Foto del genero" class="w-full h-full object-cover"/>
                <div class="absolute inset-0 rounded bg-gradient-to-t from-black/50 via-black/20 to-transparent 
                opacity-0 group-hover:opacity-100 transition-opacity duration-300 flex items-center justify-center">
                    <span class="text-white font-semibold">Cambiar imagen</span>
                </div>
            </div>
            <input type="file" asp-for="GenderImage" id="GenderImageInput" name="GenderImage" class="hidden" accept="image/*" />
        </div>
        <input type="hidden" readonly asp-for="Id" />
        <div class="relative">
            <input asp-for="Name" type="text" class="block px-3 p-2 pt-3 w-full text-sm bg-transparent rounded-lg border-1 appearance-none text-white border-neutral-600 focus:border-blue-500 focus:outline-none focus:ring-0 peer"/>
            <label asp-for="Name" class="absolute text-sm text-neutral-400 duration-300 transform -translate-y-4 scale-75 top-2 z-10 origin-[0] bg-neutral-950 px-3 peer-focus:px-2 peer-focus:text-blue-500 peer-placeholder-shown:scale-100 peer-placeholder-shown:-translate-y-1/2 peer-placeholder-shown:top-1/2 peer-focus:top-2 peer-focus:scale-75 peer-focus:-translate-y-4 rtl:peer-focus:translate-x-1/4 rtl:peer-focus:left-auto start-1"></label>
            <span asp-validation-for="Name" class="text-red-500 text-sm"></span>
        </div>
        <div class="relative">
            <textarea asp-for="Description" rows="2" class="block px-2.5 pb-1.5 pt-3 w-full text-sm bg-transparent rounded-lg border-1 appearance-none text-white border-neutral-600 focus:border-blue-500 focus:outline-none focus:ring-0 peer"></textarea>
            <label asp-for="Description" class="absolute text-sm text-neutral-400 duration-300 transform -translate-y-4 scale-75 top-2 z-10 origin-[0] bg-neutral-950 px-2 peer-focus:px-2 peer-focus:text-blue-500 peer-placeholder-shown:scale-100 peer-placeholder-shown:-translate-y-1/2 peer-placeholder-shown:top-1/2 peer-focus:top-2 peer-focus:scale-75 peer-focus:-translate-y-4 rtl:peer-focus:translate-x-1/4 rtl:peer-focus:left-auto start-1"></label>
            <span asp-validation-for="Description" class="text-red-500 text-sm"></span>
        </div>
        <div class="sm:col-span-2 flex justify-end">
            <button type="submit" class="text-white bg-blue-700 hover:bg-blue-800 focus:outline-none focus:ring-4 focus:ring-blue-300 font-medium rounded-full text-sm px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800 cursor-pointer">Guardar</button>
        </div>
    </form>
</div>

<script>
    document.addEventListener("DOMContentLoaded", function() {
        setupImagePreview('#GenderImageInput', 'img[alt="Foto de genero"]');
    });
</script>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}